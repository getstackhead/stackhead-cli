{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StackHead CLI config",
  "description": "StackHead CLI config file",
  "type": "object",
  "required": ["modules"],
  "properties": {
    "modules": {
      "type": "object",
      "required": ["webserver", "container"],
      "properties": {
        "webserver": {
          "type": "string"
        },
        "container": {
          "type": "string"
        },
        "plugins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
